<script>

    var canvasElementId = 'example';

    // Size of each grid cell in pixels.
    var gridSize = 20;
    // Create Canvas
    var canvas = createCanvas(window.innerWidth, window.innerHeight);
    var ctx = canvas.getContext('2d');



    // Add square when clicked.
    canvas.onclick = function (e) {

        promptSize(e.clientX, e.clientY);
    }

    function promptSize(x, y) {
        var width = prompt("width:", 20);
        var height = prompt("height:", 20);
        if (width == null || width == "" || height == null || height == "") {
            txt = "User cancelled the prompt.";
        } else {
            createSquare(x, y, width, height);
        }
    }

    function createSquare(x, y, width, height) {
        x = Math.floor(x / width) * width;
        y = Math.floor(y / height) * height;

        var sq = document.createElement('div');
        sq.style.width = width + 'px';
        sq.style.height = height + 'px';
        sq.style.transform = 'translate(' + x + 'px,' + y + 'px)';
        sq.style.backgroundColor = randColor(0, 150);

        // Drag/Drop.
        sq.onmousedown = function () {
            document.onmouseup = function () {
                document.onmousemove = document.onmouseup = '';
            }
            document.onmousemove = (e) => {
                var x = Math.floor(e.clientX / width) * width;
                var y = Math.floor(e.clientY / height) * height;
                this.style.transform = 'translate(' + x + 'px,' + y + 'px)';
            }

        }

        document.body.appendChild(sq);
    }

    // Draw Grid.
    drawGrid(ctx, gridSize, canvas.width, canvas.height);

    function drawGrid(ctx, gridSize, w, h) {
        var linesX = w / gridSize;
        var linesY = h / gridSize;
        ctx.strokeStyle = '#CCC';
        for (var x = 0; x < linesX; x++) {
            var start = gridSize * x;
            ctx.moveTo(start, 0);
            ctx.lineTo(start, h);
            ctx.stroke();
        }
        for (var y = 0; y < linesY; y++) {
            var start = gridSize * y;
            ctx.moveTo(0, start);
            ctx.lineTo(w, start);
            ctx.stroke();
        }
    }

    function createCanvas(w, h) {
        var canvas = document.createElement('canvas');
        canvas.width = w;
        canvas.height = h;
        document.body.appendChild(canvas);
        return canvas;
    }

    function rand(min, max) {
        return Math.random() * (max - min) + min;
    }
    function randColor(min, max) {
        var r = Math.floor(rand(min, max)),
            g = Math.floor(rand(min, max)),
            b = Math.floor(rand(min, max));
        return 'rgba(' + r + ',' + g + ',' + b + ',1)';
    }
</script>

